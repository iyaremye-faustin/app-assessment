# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CUSTOMER_TOPIC=customer_data
KAFKA_INVENTORY_TOPIC=inventory_data
KAFKA_GROUP_ID=consumer-service-group
KAFKA_AUTO_OFFSET_RESET=earliest

# Analytics System
ANALYTICS_BASE_URL=http://localhost:8083
ANALYTICS_ENDPOINT=/analytics/data
ANALYTICS_RETRY_ATTEMPTS=3
ANALYTICS_RETRY_BACKOFF=2

# Redis for Idempotency
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
IDEMPOTENCY_TTL_SECONDS=86400

# Logging
LOG_LEVEL=INFO
